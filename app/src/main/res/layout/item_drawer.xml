<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="0dp"
    android:orientation="vertical"
    android:layout_gravity="start"
    android:id="@+id/linear_layout_drawer">
    
    <ImageView
        android:id="@+id/icono_conciertos"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:background="@drawable/menu_concierto"
        android:layout_weight="1"
        android:scaleType="fitXY"/>
    
   	<ImageView
        android:id="@+id/icono_noticias"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:background="@drawable/menu_noticias"
        android:layout_weight="1"
        android:scaleType="fitXY"/>

   <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:orientation="horizontal">

        <ImageView
            android:id="@+id/icono_streaming"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@drawable/menu_streaming"
            android:layout_weight="1"
            android:scaleType="fitXY"/>

       <LinearLayout
           android:layout_width="match_parent"
           android:layout_height="match_parent"
           android:layout_weight="1"
           android:orientation="vertical"
           android:weightSum="20">

           <ImageView
               android:id="@+id/icono_contacto"
               android:layout_width="match_parent"
               android:layout_height="0dp"
               android:background="@drawable/menu_contacto"
               android:layout_weight="9"
               android:scaleType="fitXY"/>
           <ImageView
               android:layout_width="match_parent"
               android:layout_height="0dp"
               android:background="@drawable/menu_patronato"
               android:layout_weight="11"
               android:scaleType="centerCrop"/>

       </LinearLayout>

    </LinearLayout>

</LinearLayout>
