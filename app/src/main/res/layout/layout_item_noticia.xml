<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#FFFFFF"
    >
    <android.support.v7.widget.CardView
        xmlns:card_view="http://schemas.android.com/apk/res-auto"
        android:id="@+id/card_view"
        android:layout_gravity="center"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_margin="7dp">
        <LinearLayout
            android:layout_marginTop="5dp"
            android:layout_marginBottom="5dp"
            android:layout_width="fill_parent"
            android:orientation="horizontal"
            android:layout_height="wrap_content">
            <LinearLayout
                android:orientation="vertical"
                android:layout_width="150dp"
                android:layout_height="145dp">
                <ImageView
                    android:layout_marginLeft="10dp"
                    android:layout_marginTop="3dp"
                    android:src="@drawable/icon_buy"
                    android:scaleType="centerCrop"
                    android:id="@+id/lista_noticia_imagen"
                    android:layout_width="140dp"
                    android:layout_height="match_parent" />

                </LinearLayout>
            <LinearLayout
                android:layout_marginLeft="8dp"
                android:orientation="vertical"
                android:layout_width="fill_parent"
                android:layout_height="145dp">
                <TextView
                    android:textSize="15sp"
                    android:textColor="#000000"
                    android:text="Titulo"
                    android:id="@+id/lista_noticias_titulo"
                    android:layout_width="wrap_content"
                    android:layout_height="37dp"
                    android:textStyle="bold"/>
                <TextView
                    android:textColor="#000000"
                    android:textSize="13sp"
                    android:text="Fecha"
                    android:id="@+id/lista_noticas_fecha"
                    android:layout_width="wrap_content"
                    android:layout_marginTop="2dp"
                    android:layout_height="20dp" />
                <TextView
                    android:layout_marginTop="2dp"
                    android:textSize="13sp"
                    android:text="Contenido"
                    android:id="@+id/lista_noticias_contenido"
                    android:layout_width="wrap_content"
                    android:layout_height="60dp"/>
                <TextView
                    android:layout_marginLeft="80dp"
                    android:textColor="#E31836"
                    android:textSize="16sp"
                    android:gravity="center"
                    android:text="LEER MÁS"
                    android:layout_width="fill_parent"
                    android:layout_height="20dp" />
            </LinearLayout>
        </LinearLayout>

    </android.support.v7.widget.CardView>

</LinearLayout>