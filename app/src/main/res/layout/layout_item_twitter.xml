<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="horizontal" android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#FFFFFF"
    >
    <ProgressBar
        android:id="@+id/progress_cargando_imagen"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:visibility="gone"
        android:indeterminate="true"
        android:layout_centerHorizontal="true"
        android:layout_centerVertical="true"
        style="?android:attr/progressBarStyleLarge"/>
    <LinearLayout
        android:layout_marginTop="15dp"
        android:layout_marginBottom="5dp"
        android:layout_width="fill_parent"
        android:orientation="horizontal"
        android:layout_height="wrap_content"
        android:id="@+id/linear_layout_twitter">

        <!-- imagen de perfil-->
        <LinearLayout
            android:orientation="vertical"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">
            <ImageView
                android:layout_marginLeft="10dp"
                android:layout_marginTop="3dp"
                android:src="@drawable/marca_ofj"
                android:scaleType="centerCrop"
                android:id="@+id/lista_noticia_imagen"
                android:layout_width="60dp"
                android:layout_height="60dp" />
        </LinearLayout>

        <!--contenido-->
        <LinearLayout
            android:layout_marginLeft="10dp"
            android:orientation="vertical"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content">
            <!-- encabezado  -->
            <LinearLayout
                android:layout_marginTop="10dp"
                android:orientation="horizontal"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content">
                <TextView
                    android:textSize="13sp"
                    android:textColor="#000000"
                    android:text="Filarmonica Jalisco"
                    android:id="@+id/lista_twitter_filarmonica"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"/>
                <TextView
                    android:layout_marginLeft="8dp"
                    android:textSize="13sp"
                    android:text="\@OfilarmonicaJal"
                    android:id="@+id/lista_twitter_ofilarmonicajal"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" />
                <TextView
                    android:layout_marginLeft="8dp"
                    android:textSize="13sp"
                    android:text="25 min"
                    android:id="@+id/lista_twitter_tiempo"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"/>
            </LinearLayout>
            <!-- Contendio del tweet -->
            <TextView
                android:fontFamily="sans-serif-light"
                android:id="@+id/lista_twitter_contenido"
                android:textColor="#000000"
                android:layout_marginTop="12dp"
                android:textSize="18sp"
                android:layout_marginRight="25dp"
                android:text="Spy una creyente del trabajo duro y la sabidurÃ­a de desarrollo a largo plazo #WagnerconAmberWagner "
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />

            <!-- Imagen en caso de que exista en el tweet-->
            <ImageView
                android:layout_marginRight="25dp"
                android:layout_marginTop="12dp"
                android:scaleType="centerCrop"
                android:src="@drawable/icon_buy"
                android:id="@+id/lista_twitter_imagen_tweet"
                android:layout_width="fill_parent"
                android:layout_height="250dp" />
            <TextView
                android:id="@+id/lista_twitter_ver_en_twitter"
                android:layout_marginRight="25dp"
                android:layout_gravity="right"
                android:text="Ver en Twitter"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />
        </LinearLayout>
    </LinearLayout>
    <TextView
        android:text="Prueba"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />
</LinearLayout>