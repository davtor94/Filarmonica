<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.example.ruben.filarmonica" >

    <uses-permission android:name="android.permission.INTERNET" />
    <uses-permission android:name="android.permission.READ_EXTERNAL_STORAGE" />
    <uses-permission android:name="android.permission.WRITE_EXTERNAL_STORAGE" />
    <uses-permission android:name="android.permission.WAKE_LOCK" />
    <uses-permission android:name="android.permission.ACCESS_NETWORK_STATE" />

    <application
        android:allowBackup="true"
        android:icon="@drawable/ic_launcher"
        android:label="@string/app_name"
        android:theme="@style/AppTheme" >
        <activity
            android:name=".SplashScreen"
            android:label="@string/app_name" >
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name=".ListaEventos"
            android:label="@string/title_activity_lista_eventos" >
        </activity>
        <activity
            android:name=".DetalleEvento"
            android:label="@string/title_activity_detalle_evento" >
            <intent-filter>
                <category android:name="android.intent.category.DEFAULT" />
                <category android:name="android.intent.category.BROWSABLE" />

                <data
                    android:host="ofj.com.mx"
                    android:pathPrefix="/conciertos-eventos/"
                    android:scheme="http" />
                <data
                    android:host="www.ofj.com.mx"
                    android:pathPrefix="/conciertos-eventos/"
                    android:scheme="http" />

                <action android:name="android.intent.action.VIEW" />
            </intent-filter>
        </activity>
        <activity
            android:name=".Noticias"
            android:label="@string/title_activity_noticias" >
            <intent-filter>
                <action android:name="android.intent.action.VIEW" />

                <category android:name="android.intent.category.DEFAULT" />
            </intent-filter>
        </activity>
        <activity
            android:name=".Facebook"
            android:label="@string/title_activity_facebook" >
        </activity>
        <activity
            android:name=".Streaming"
            android:configChanges="orientation|screenSize"
            android:label="StreamingFull" >
        </activity>
        <activity
            android:name=".MainActivity"
            android:label="Splash" />
        <activity
            android:name=".Contacto"
            android:label="Contacto" />

        <service android:name=".ServicioActualizacionBD" />
        <service android:name=".ServicioMusica" />

        <activity
            android:name=".Patronato"
            android:label="@string/title_activity_patronato" >
        </activity>
    </application>

</manifest>
